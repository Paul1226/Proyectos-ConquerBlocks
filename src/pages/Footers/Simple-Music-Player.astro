---
import LayoutProjects from "../../layouts/LayoutProjects.astro";

// icons
import Facebook from "../../icons/socialNetworks/Facebook.astro";
import Twitter from "../../icons/socialNetworks/Twitter.astro";
import Telegram from "../../icons/socialNetworks/Telegram.astro";
import Instagram from "../../icons/socialNetworks/Instagram.astro";
---

<LayoutProjects title="Simple Music Player" nameProject="Simple Music Player">
    <div class="fixed inset-0 bg-[#333333] w-full h-full -z-10"></div>
    <footer
        class="w-full bg-footers-cuarto-backg text-white fixed bottom-0 left-0 py-2"
    >
        <div class="w-11/12 mx-auto flex items-center justify-between gap-16">
            <figure>
                <img
                    class="w-full object-cover min-w-16"
                    src="/images/footers/simple/logo-simple.webp"
                    alt="Logo simple music player"
                    loading="lazy"
                />
            </figure>

            <div class="flex flex-col w-full">
                <div
                    class="flex items-center w-full justify-between py-5 border-b-2 border-white/60"
                >
                    <ul
                        class="flex items-center gap-6 text-white/60 ul-nav-first font-extralight"
                    >
                        <li><a href="#">About</a></li>
                        <li><a href="#">Features</a></li>
                        <li><a href="#">Pricing</a></li>
                        <li><a href="#">Gallery</a></li>
                        <li><a href="#">Team</a></li>
                    </ul>

                    <div class="flex items-center gap-6">
                        <form action="">
                            <input
                                class="py-1 pl-3 rounded-full text-black outline-none"
                                type="text"
                                name="search"
                                id="search-simple"
                                placeholder="search..."
                            />
                        </form>

                        <ul class="flex items-center gap-4 w-max icons-list">
                            <li><a href="#"><Facebook /></a></li>
                            <li><a href="#"><Twitter /></a></li>
                            <li><a href="#"><Telegram /></a></li>
                            <li><a href="#"><Instagram /></a></li>
                        </ul>
                    </div>
                </div>
                <div class="py-5">
                    <ul class="flex items-center text-white/60 gap-6 font-extralight">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Use</a></li>
                        <li><a href="#">Sales and Refunds</a></li>
                        <li><a href="#">Legal</a></li>
                        <li><a href="#">Site Map</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</LayoutProjects>

<style>
    ul {
        li {
            a {
                @apply transition-colors duration-300 ease-in-out;
                &:hover {
                    @apply text-white;
                }
            }
        }
    }

    .icons-list {
        li {
            a {
                svg {
                    @apply w-7 h-7 stroke-white/60 transition-all duration-300 ease-in-out;
                }

                &:hover {
                    svg {
                        @apply stroke-white scale-110;
                    }
                }
            }
        }
    }
</style>
